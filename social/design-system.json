{
  "name": "Фонд социальной поддержки - Дизайн-система",
  "version": "1.0.0",
  "description": "Дизайн-система для сайта Фонда социальной поддержки с акцентом на Калмыкию",
  "colors": {
    "primary": {
      "main": "#1E3A8A",
      "light": "#3B82F6",
      "dark": "#1E40AF",
      "contrast": "#FFFFFF"
    },
    "secondary": {
      "main": "#DC2626",
      "light": "#EF4444",
      "dark": "#B91C1C",
      "contrast": "#FFFFFF"
    },
    "accent": {
      "main": "#F59E0B",
      "light": "#FBBF24",
      "dark": "#D97706",
      "contrast": "#000000"
    },
    "neutral": {
      "white": "#FFFFFF",
      "gray-50": "#F9FAFB",
      "gray-100": "#F3F4F6",
      "gray-200": "#E5E7EB",
      "gray-300": "#D1D5DB",
      "gray-400": "#9CA3AF",
      "gray-500": "#6B7280",
      "gray-600": "#4B5563",
      "gray-700": "#374151",
      "gray-800": "#1F2937",
      "gray-900": "#111827",
      "black": "#000000"
    },
    "success": "#10B981",
    "warning": "#F59E0B",
    "error": "#EF4444",
    "info": "#3B82F6"
  },
  "typography": {
    "fontFamily": {
      "primary": "'Inter', 'Roboto', 'Arial', sans-serif",
      "secondary": "'Playfair Display', 'Georgia', serif"
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },
    "fontWeights": {
      "light": "300",
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700",
      "extrabold": "800"
    },
    "lineHeights": {
      "tight": "1.25",
      "normal": "1.5",
      "relaxed": "1.75"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "6rem"
  },
  "borderRadius": {
    "sm": "0.25rem",
    "md": "0.375rem",
    "lg": "0.5rem",
    "xl": "0.75rem",
    "2xl": "1rem",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1)"
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "components": {
    "button": {
      "primary": {
        "backgroundColor": "#1E3A8A",
        "color": "#FFFFFF",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "600"
      },
      "secondary": {
        "backgroundColor": "#DC2626",
        "color": "#FFFFFF",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "600"
      },
      "outline": {
        "backgroundColor": "transparent",
        "color": "#1E3A8A",
        "border": "2px solid #1E3A8A",
        "borderRadius": "0.5rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": "600"
      }
    },
    "card": {
      "backgroundColor": "#FFFFFF",
      "borderRadius": "1rem",
      "padding": "2rem",
      "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
    },
    "input": {
      "borderRadius": "0.5rem",
      "border": "2px solid #E5E7EB",
      "padding": "0.75rem 1rem",
      "focusBorder": "#1E3A8A"
    }
  }
}
